{
    "compilerOptions": {
      "lib": ["es5", "es6", "ESNext", "dom"],
      "target": "ESNext",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "baseUrl": "/src",
      "skipLibCheck": true
    },
    "include": ["src/**/*.ts", "src"],
    "exclude": ["node_modules"]
  }
  